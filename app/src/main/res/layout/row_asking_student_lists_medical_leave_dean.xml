<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="10dp"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_alignParentLeft="true"
    >

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="mkpt"
              android:textStyle="bold"
              android:textSize="18sp"
              android:id="@+id/tv_mkpt_medical_leave_dean"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="asking date"
              android:id="@+id/tv_asking_date_medical_leave_dean"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="progress"
              android:id="@+id/tv_progress_medical_leave_dean"
    />

    </LinearLayout>

    <ImageView android:layout_width="70dp"
               android:layout_height="70dp"
               android:src="@drawable/side_nav_bar"
               android:id="@+id/img_medical_leave_letter_dean"
               android:layout_alignParentRight="true"
    />


</RelativeLayout>