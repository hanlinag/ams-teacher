<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MedicalLeaveActionDeanActivity">


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text = "mkpt"
              android:textSize="18sp"
              android:textStyle="bold"
              android:id="@+id/tv_mkpt_medical_leave_action_dean"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text = "nname"
              android:layout_below="@+id/tv_mkpt_medical_leave_action_dean"
              android:id="@+id/tv_name_medical_leave_action_dean"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text = "asking date"
              android:layout_below="@+id/tv_name_medical_leave_action_dean"
              android:id="@+id/tv_asking_date_medical_leave_action_dean"
    />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text = "progress"
              android:textStyle="italic"
              android:layout_below="@+id/tv_asking_date_medical_leave_action_dean"
              android:id="@+id/tv_progress_medical_leave_action_dean"
    />

    <ImageView android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="centerInside"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:adjustViewBounds="true"
               android:src="@drawable/no_img_pic"
               android:layout_below="@+id/tv_progress_medical_leave_action_dean"
               android:layout_above="@+id/linear_layout_medical_leave_action_dean"
               android:id="@+id/img_medical_leave_letter_medical_action_dean"

    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="2"
                  android:id="@+id/linear_layout_medical_leave_action_dean"
                  android:layout_alignParentBottom="true"
    >
        <Button android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Decline"
                android:id="@+id/bt_decline_medical_leave_dean_action"
                android:textColor="#E91E63"
        />

        <Button android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept"
                android:id="@+id/bt_accept_medical_leave_dean_action"
                android:textColor="#4CAF50"
        />

    </LinearLayout>
</RelativeLayout>
