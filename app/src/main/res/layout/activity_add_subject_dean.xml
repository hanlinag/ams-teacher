<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/side_nav_bar"
        tools:context=".AddSubjectDeanActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:padding="10dp"
    >

        <ImageView android:layout_width="150dp"
                   android:layout_height="150dp"
                   android:src="@drawable/logotran"
                   android:layout_gravity="center_horizontal"
        />

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="subject code"
                  android:id="@+id/edt_subject_code_add_subject_dean"

        />

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="subject name"
                  android:id="@+id/edt_subject_name_add_subject_dean"

        />

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="room"
                  android:id="@+id/edt_subject_room_add_subject_dean"

        />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="2"
        >
            <Spinner android:layout_width="0dp"
                      android:layout_height="30dp"
                      android:hint="day"
                      android:layout_weight="1"
                     android:layout_gravity="center_vertical"
                      android:id="@+id/spinner_subject_day_add_subject_dean1"

            />

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="horizontal"
                          android:weightSum="2"
            >
                <Spinner android:layout_width="0dp"
                         android:layout_height="30dp"
                         android:layout_gravity="center_vertical"
                         android:layout_weight="1"
                         android:id="@+id/spinner_subject_start_time_add_subject_dean1"

                />

                <Spinner android:layout_width="0dp"
                         android:layout_height="30dp"
                         android:layout_weight="1"
                         android:layout_gravity="center_vertical"
                         android:id="@+id/spinner_subject_end_time_add_subject_dean1"

                />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="2"
        >
            <Spinner android:layout_width="0dp"
                     android:layout_height="30dp"
                     android:hint="day"
                     android:layout_weight="1"
                     android:layout_gravity="center_vertical"
                     android:id="@+id/spinner_subject_day_add_subject_dean2"

            />

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="horizontal"
                          android:weightSum="2"
            >
                <Spinner android:layout_width="0dp"
                         android:layout_height="30dp"
                         android:layout_gravity="center_vertical"
                         android:layout_weight="1"
                         android:id="@+id/spinner_subject_start_time_add_subject_dean2"

                />

                <Spinner android:layout_width="0dp"
                         android:layout_height="30dp"
                         android:layout_weight="1"
                         android:layout_gravity="center_vertical"
                         android:id="@+id/spinner_subject_end_time_add_subject_dean2"

                />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="2"
        >
            <Spinner android:layout_width="0dp"
                     android:layout_height="30dp"
                     android:hint="day"
                     android:layout_weight="1"
                     android:layout_gravity="center_vertical"
                     android:id="@+id/spinner_subject_day_add_subject_dean3"

            />

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="horizontal"
                          android:weightSum="2"
            >
                <Spinner android:layout_width="0dp"
                         android:layout_height="30dp"
                         android:layout_gravity="center_vertical"
                         android:layout_weight="1"
                         android:id="@+id/spinner_subject_start_time_add_subject_dean3"

                />

                <Spinner android:layout_width="0dp"
                         android:layout_height="30dp"
                         android:layout_weight="1"
                         android:layout_gravity="center_vertical"
                         android:id="@+id/spinner_subject_end_time_add_subject_dean3"

                />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="2"
        >
            <Spinner android:layout_width="0dp"
                     android:layout_height="30dp"
                     android:hint="day"
                     android:layout_weight="1"
                     android:layout_gravity="center_vertical"
                     android:id="@+id/spinner_subject_day_add_subject_dean4"

            />

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="horizontal"
                          android:weightSum="2"
            >
                <Spinner android:layout_width="0dp"
                         android:layout_height="30dp"
                         android:layout_gravity="center_vertical"
                         android:layout_weight="1"
                         android:id="@+id/spinner_subject_start_time_add_subject_dean4"

                />

                <Spinner android:layout_width="0dp"
                         android:layout_height="30dp"
                         android:layout_weight="1"
                         android:layout_gravity="center_vertical"
                         android:id="@+id/spinner_subject_end_time_add_subject_dean4"

                />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:weightSum="2"
        >
            <Spinner android:layout_width="0dp"
                     android:layout_height="30dp"
                     android:hint="day"
                     android:layout_weight="1"
                     android:layout_gravity="center_vertical"
                     android:id="@+id/spinner_subject_day_add_subject_dean5"

            />

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="horizontal"
                          android:weightSum="2"
            >
                <Spinner android:layout_width="0dp"
                         android:layout_height="30dp"
                         android:layout_gravity="center_vertical"
                         android:layout_weight="1"
                         android:id="@+id/spinner_subject_start_time_add_subject_dean5"

                />

                <Spinner android:layout_width="0dp"
                         android:layout_height="30dp"
                         android:layout_weight="1"
                         android:layout_gravity="center_vertical"
                         android:id="@+id/spinner_subject_end_time_add_subject_dean5"

                />
            </LinearLayout>


        </LinearLayout>


        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/edt_subject_teacher_id_add_subject_dean"
                  android:hint="teacher id"
        />



    </LinearLayout>

</LinearLayout>